{
    "tasks": [
        {
            "type": "shell",
            "label": "Create Debug Directory",
            "command": "mkdir",
            "args": [
                "-p",
                "${workspaceFolder}/build/debug"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "detail": "Creates the directory for the debug build",
        },
        {
            "type": "shell",
            "label": "Clear Debug Directory",
            "command": "rm",
            "args": [
                "-r",
                "-f",
                "${workspaceFolder}/build/debug"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "detail": "Removes the debug directory",
        },
        {
            "type": "shell",
            "label": "Run CMake Debug",
            "command": "cmake",
            "args": [
                "-DCMAKE_BUILD_TYPE=Debug",
                "${workspaceFolder}"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build/debug"
            },
            "problemMatcher": [],
            "group": "build",
            "detail": "Generates files for building by using CMake",
        },
        {
            "type": "shell",
            "label": "Make All Targets Debug",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/build/debug"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "This task is for building by using make",
            "dependsOn": "Run Cmake"
        },
        {
            "label": "Build Debug",
            "type": "shell",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Create Debug Directory",
                "Run CMake Debug",
                "Make All Targets Debug"
            ],
            "group": {
                "isDefault": true,
                "kind": "build"
            },
            "detail": "Runs CMake and Make",
        },
        {
            "label": "Rebuild Debug",
            "type": "shell",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Clear Debug Directory",
                "Create Debug Directory",
                "Run CMake Debug",
                "Make All Targets Debug"
            ],
            "detail": "Removes the debug directory and runs CMake, Make",
        }
    ],
    "version": "2.0.0"
}