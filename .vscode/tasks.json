{
    "tasks": [
        {
            "type": "shell",
            "label": "Create Debug Directory",
            "command": "mkdir",
            "args": [
                "-p",
                "${workspaceFolder}/build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "detail": "Create the directory for build",
        },
        {
            "type": "shell",
            "label": "Run CMake Debug",
            "command": "cmake",
            "args": [
                "-DCMAKE_BUILD_TYPE=Debug",
                "${workspaceFolder}"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": [],
            "group": "build",
            "detail": "Generates files for building by using CMake",
        },
        {
            "type": "shell",
            "label": "Make All Targets",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "This task is for building by using make",
            "dependsOn": "Run Cmake"
        },
        {
            "label": "Build Debug",
            "type": "shell",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Create Debug Directory",
                "Run CMake Debug",
                "Make All Targets"
            ],
            "group": {
                "isDefault": true,
                "kind": "build"
            }
        }
    ],
    "version": "2.0.0"
}